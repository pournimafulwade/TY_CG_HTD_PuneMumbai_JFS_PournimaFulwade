<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	
	
   <!--  configuration for set -->
   <bean id="medicine"
		class="com.capgemini.springcore.beans.Medicine">
		<property name="name" value="Crocine" />
		<property name="price" value="52.45" />
		<property name="type" value="Allopathic" />
		<property name="drugset">
			<set>
				<value>Abc12</value>
				<value>Paracetamol</value>
				<value>Xyz21</value>
			</set>
		</property>
	</bean>
   
   
