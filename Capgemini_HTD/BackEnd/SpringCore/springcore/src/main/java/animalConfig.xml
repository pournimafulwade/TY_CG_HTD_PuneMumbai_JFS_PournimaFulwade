<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	
	<!-- creating object for panda.java class -->
	<bean id="panda" class="com.capgemini.springcore.beans.Panda"></bean>


	<!-- object creation of the dog.java class -->
	<bean id="dog" class="com.capgemini.springcore.beans.Dog" primary="true"></bean>

</beans>
	